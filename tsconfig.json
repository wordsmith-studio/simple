{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "src",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@content/*": ["content/*"],
      "@config": ["config.ts"],
      "@styles/*": ["styles/*"],
      "@lib/*": ["lib/*"]
    }
  }
}
